LIBRARY IEEE;
USE IEEE.STD_LOGIC_1164.ALL;
USE IEEE.NUMERIC_STD.ALL;

PACKAGE horwall IS
	PROCEDURE vh(SIGNAL Xcur,Ycur,Xpos,Ypos :IN INTEGER;SIGNAL RGB:OUT STD_LOGIC_VECTOR(3 DOWNTO 0);
		SIGNAL DRAW: OUT STD_LOGIC);
	END horwall;

	PACKAGE BODY horwall IS
		PROCEDURE vh(SIGNAL Xcur,Ycur,Xpos,Ypos :IN INTEGER;
						 SIGNAL RGB						 :OUT STD_LOGIC_VECTOR(3 DOWNTO 0);
						 SIGNAL DRAW					 : OUT STD_LOGIC) IS
	BEGIN 
		IF(Xcur>Xpos AND Xcur<(Xpos+1281) AND Ycur>Ypos AND Ycur<(Ypos+8)) THEN
			RGB <= "1111";
			DRAW <= '1';
		ELSE 
			DRAW <= '0';
		END IF;
	END vh;
END horwall;